<h1>Neighborhoods</h1>


<%= form_tag('/neighborhoods/:id', method: :get) do %>
<!-- hidden input w/neighbhorhood name -->
<%= select_tag :id, options_for_select([['Wicker Park', 1], ['Logan Square', 2]]) %>
<%= submit_tag %>
<% end %>




<%= form_tag('/users', method: :post) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password_digest %>
  <%= f.password_field :password_digest %>
  <%= f.submit %>
<% end %>


<%= form_tag('/sessions', method: :post) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password_digest %>
  <%= f.password_field :password_digest %>
  <%= f.submit %>
<% end %>

