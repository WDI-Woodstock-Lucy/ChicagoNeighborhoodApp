<body id="main-body">


	



	<h1>Neighborhoods</h1>


	<!-- NEIGHBORHOOD SELECTOR -->
	<%= form_tag('/neighborhoods/show', method: :get) do %>
	<%= select_tag :neighborhood_id, options_from_collection_for_select(Neighborhood.all, :id, :name) %>
	<%= submit_tag 'Explore', :id=> "neighborhood-button"%>
	<% end %>

	<!-- SIGN UP FORM -->
	<p id="sign-up-cta">SIGN-UP HERE</p>

	<%= form_for @newuser do |f| %>
	  <%= f.label :email %>
	  <%= f.text_field :email, class: 'sign-up-field', id: 'sign-up-email'  %>
	  <%= f.label :password %>
	  <%= f.password_field :password, class: 'sign-up-field', id: 'sign-up-password'  %>
	  <%= f.submit "Sign Up"%>
	<% end %>


	

	<script type="text/javascript">

		$(document).ready(function(){

			// SIGN UP FORM
			$('#new_user').hide();

			$('#sign-up-cta').on("click", function(evt){
				evt.preventDefault();
				$('#new_user').slideToggle("slow");

			});

			

			//FORM VALIDATION

			$('input[name="user[password]"]').on('keyup', function(evt){
				evt.preventDefault();
				var emailField = $(this);
				if (emailField.val().length >= 6){
					emailField.css("background-color", "rgba(89,193,114,.5)");
				} else {
					emailField.css("background-color", "rgba(255,1,1,.5)");
				}
			});

		})


	</script>


</body>
