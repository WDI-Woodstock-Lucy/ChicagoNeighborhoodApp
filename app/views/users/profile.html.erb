<body id="profile-body">

  <h1>Hello, <%= @user.email %>!</h1>



  <p id="edit-form">Update your email or password.</p>
 

  <div id="profile-update-form">
  <%= form_for @user do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email%>
    <%= f.label :password %>
    <%= f.password_field :password%>
    <%= f.submit  'Update', id: 'edit-button' %>
  <% end %>
  </div>

 <p id="edit-form-note">Please Note: Your information cannot be updated unless you fill out both forms with the new email and old password or vice versa.</p>

  <footer></footer>

  <script type="text/javascript">

    $(document).ready(function(){
      $('#current_user').hide();

      $('#edit-button').prop("disabled", "true");


      // Line to renable user button
      $('#user_password').on('focusout', function() {

        $(':submit').prop("disabled", "")

      });



      $('#edit-form').on("click", function(evt){
        evt.preventDefault();
        $('#current_user').slideToggle("slow");

      });

      $('')

      // line to  disable user button until password is filled out

      $('input[name="user[password]"]').on('keyup', function(evt){
        evt.preventDefault();
        var emailField = $(this);
        if (emailField.val().length >= 6){
          emailField.css("background-color", "rgba(89,193,114,.5)");
        } else {
          emailField.css("background-color", "rgba(255,1,1,.5)");
        }
      });

    })

  </script>

</body>
