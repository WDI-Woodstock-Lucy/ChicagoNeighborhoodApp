  <h1>Hello <%= @user.email %></h1>

  <p id="edit-form">Edit Email or Password</p>

  <%= form_for @useredit do |f| %>
    <%= f.label :current_email %>
    <%= f.text_field :email, class: 'edit-field', id: 'edit-email-current' %>
    <%= f.label :new_email %>
    <%= f.password_field :email, class: 'edit-field', id: 'edit-email-new' %>
    <%= f.submit%>
  <% end %>

  <%= form_for @useredit do |f| %>
    <%= f.label :current_password %>
    <%= f.text_field :password, class: 'edit-field', id: 'edit-password-current' %>
    <%= f.label :new_password %>
    <%= f.password_field :password, class: 'edit-field', id: 'edit-password-new' %>
    <%= f.submit%>
  <% end %>

  <script type="text/javascript">
    $(document).ready(function(){
      $('#current_user').hide();
      $('#edit-form').on("click", function(evt){
        evt.preventDefault();
        $('#current_user').slideToggle("slow");
      });

      $('')

      $('input[name="user[password]"]').on('keyup', function(evt){
        evt.preventDefault();
        var emailField = $(this);
        if (emailField.val().length >= 6){
          emailField.css("background-color", "rgba(89,193,114,.5)");
        } else {
          emailField.css("background-color", "rgba(255,1,1,.5)");
        }
      });

    })

  </script>

</body>
