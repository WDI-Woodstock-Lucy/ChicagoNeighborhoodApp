
<nav class="user-nav">
	<%= image_tag "menu-icon.png", :id => "nav-icon" %>
	<%= form_tag('/sessions', method: :delete, :id => "sign-out-form", :class => 'non-responsive') do %>
	<%= submit_tag "Sign Out", :class => 'non-responsive'%>
	<% end %>
	<a href="/profile" class="non-responsive">My Profile</a>
	<a href="/neighborhoods" id="nav-logo-wrapper" class="non-responsive"><h1 id="nav-logo">BLOCKTROTTER</h1></a>
	<a href="/neighborhoods" id="nav-logo-wrapper" class="responsive"><h2 id="nav-logo">BLOCKTROTTER</h2></a>
	<a href="/profile" id="responsive-sign-out" class="responsive"><h2>My Profile</h2></a>
	<%= form_tag('/sessions', method: :delete, :id => "sign-out-form-responsive", :class => 'responsive') do %>
	<%= submit_tag "Sign Out", :class => 'responsive'%>
	<% end %>

</nav>

<script type="text/javascript">

	// SIGN IN FORM
			$('.responsive').hide();

			$('#nav-icon').on("click", function(evt){
				evt.preventDefault();
				$('.responsive').slideToggle("slow");
			})

			$(window).resize(function(){
				if ($(window).width() >= 670){
					$('.responsive').hide();
				}
			});

</script>
